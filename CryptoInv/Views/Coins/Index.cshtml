@model IEnumerable<CryptoInv.Models.Coins.CoinViewModel>

@{
    ViewData["Title"] = "Coins";
}

<div class="heading single">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>Coins</h3>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-data-last-active">
                    <thead>
                        <tr class="success">
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PricePerCoinFormatted)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PriceChange24Hours)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hour24High)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hour24Low)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Volume24)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MarketCap)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <p><i class="cc @Html.DisplayFor(modelItem => item.Id)"></i> @Html.DisplayFor(modelItem => item.Name)</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.PricePerCoinFormatted)</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.PriceChange24Hours)%</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.Hour24High)</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.Hour24Low)</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.Volume24)</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.MarketCap)</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

