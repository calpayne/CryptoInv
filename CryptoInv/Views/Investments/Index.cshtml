@model IEnumerable<CryptoInv.Data.Investment>

@{
    ViewData["Title"] = "Index";
}

<div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Your Investments</h3>
                <h5>Investing since 11/04/2019</h5>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4">
                        <div class="well well-lg">
                            <p>£1,300<br><span>Invested</span></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="well well-lg">
                            <p>+£10,300<br><span>Profit</span></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="well well-lg">
                            <p>£11,600<br><span>Assets</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="success">
                            <th>
                                @Html.DisplayNameFor(model => model.Coin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PricePerCoin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InvestmentDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Coin.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PricePerCoin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cost)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvestmentDate)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            Manage
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                            <li><a asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                                            <li><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>