@model CryptoInv.Models.Investments.InvestmentIndexViewModel

@{
    ViewData["Title"] = "Your Investments";
}

<div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Your Investments</h3>
                <h5>Investing since 11/04/2019</h5>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4">
                        <div class="well well-lg">
                            <p>&pound;@Html.DisplayFor(model => model.TotalInvested)<br><span>@Html.DisplayNameFor(model => model.TotalInvested)</span></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="well well-lg">
                            <p>&pound;@Html.DisplayFor(model => model.TotalProfit)<br><span>@Html.DisplayNameFor(model => model.TotalProfit)</span></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="well well-lg">
                            <p>&pound;@Html.DisplayFor(model => model.TotalAssets)<br><span>@Html.DisplayNameFor(model => model.TotalAssets)</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <partial name="_InvestmentsTable" for="Investments" />
            </div>
        </div>
    </div>
</div>